# XFas Logistics Backend Environment Configuration

# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=xfas_logistics

# JWT Configuration
JWT_SECRET_KEY=xfas-logistics-secret-key-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# SMS Configuration
# Set SMS_MODE to 'development' for console output, 'production' for real SMS
SMS_MODE=development
SMS_PROVIDER=fast2sms

# Fast2SMS Configuration (Popular in India)
# Sign up at https://www.fast2sms.com/
FAST2SMS_API_KEY=your_fast2sms_api_key_here
FAST2SMS_SENDER_ID=XFASLO

# MSG91 Configuration (Popular in India)
# Sign up at https://msg91.com/
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=XFASLO
MSG91_TEMPLATE_ID=your_template_id_here

# Twilio Configuration (International)
# Sign up at https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# Email Configuration (for Email OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password
FROM_EMAIL=your_email@gmail.com

# Application Settings
DEBUG=True